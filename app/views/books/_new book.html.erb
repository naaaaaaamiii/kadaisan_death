<div>
  <h1>User info</h1>
  <%= image_tag user.get_image %>
  <p>name  <%= user.name %>  </p>
  <p>introduction <%= user.introduction %> </p>


<h1>New book</h1>
  <%= form_with model: book do |f| %>
